pipeline {
    agent any 
    stages {
        stage ('Build Servlet Project') {
            steps {
                /*For Windows machine*/
                bat 'mvn clean package'

                /*For Mac & Linuc machines*/
                //sh 'mvn clean package'

            }

            post {
                success{
                    echo 'Now archiving...'

                    archiveArtifacts artifacts : '**/*.war'
                }
            }
        }
        stage ('Deploy Build in staging area') {
            steps{
                build job: 'Deploy_Staging_Env_Pipeline'
            }
        }
    }
}